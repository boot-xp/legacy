@model Admin.Web.ViewModels.Users.EditViewModel

@{
    ViewBag.Title = "Edit User";
    Layout = "_Layout";
}

<h2>User: @Model.LastName, @Model.FirstName</h2>

<form action="@Url.Action("Edit", new {id = Model.Id})" method="post">
    <div class="form-group">
        <label>First Name</label>
        @Html.TextBoxFor(v => v.FirstName, new { @class = "form-control" } )
    </div>
    
    <div class="form-group">
        <label>Last Name</label>
        @Html.TextBoxFor(v => v.LastName, new { @class = "form-control" } )
    </div>
    
    <div class="checbox">
        <label>
            @Html.CheckBoxFor(v => v.IsAdmin)
            Is Admin?
        </label>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-default">Save</button>
    </div>
</form>
