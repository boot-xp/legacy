@model Admin.Web.ViewModels.Users.CreateViewModel

@{
    ViewBag.Title = "Create User";
    Layout = "_Layout";
}

<h2>Create User</h2>

<form action="@Url.Action("Create")" method="post">
    <div class="form-group">
        <label for="">First Name</label>
        @Html.TextBoxFor(v => v.FirstName, new { @class = "form-control" } )
    </div>
    
    <div class="form-group">
        <label for="">Last Name</label>
        @Html.TextBoxFor(v => v.LastName, new { @class = "form-control" } )
    </div>
    
    <div class="form-group">
        <label for="">Email</label>
        @Html.TextBoxFor(v => v.Email, new { @class = "form-control", type="email" } )
    </div>
    
    <div class="form-group">
        <label for="">Password</label>
        @Html.PasswordFor(v => v.Password, new { @class = "form-control" } )
    </div>
    
    <div class="checbox">
        <label>
            @Html.CheckBoxFor(v => v.IsAdmin)
        </label>
    </div>
    
    <div class="form-group">
        <button type="submit">Save</button>
    </div>
</form>
