@model Admin.Web.ViewModels.Users.IndexViewModel
@{
    ViewBag.Title = "Users";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-10">
        <h3>Users</h3>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in @Model.Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = user.Id })">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>