@model Admin.Web.ViewModels.Products.IndexViewModel

@{
    ViewBag.Title = "Products";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-10">
        <h2>Products</h2>        
    </div>
    <div class="col-sm-2">
        <a class="btn btn-primary" href="@Url.Action("Create")"><span class="glyphicon glyphicon-plus"></span></a>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Cost</th>
                <th>Price</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var product in @Model.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Cost</td>
                    <td>@product.Price</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = product.Id })">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
