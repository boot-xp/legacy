@model Admin.Web.ViewModels.Products.EditViewModel

@{
    ViewBag.Title = "Edit Product";
    Layout = "_Layout";
}

<h2>Product: @Model.Name</h2>

<form action="@Url.Action("Edit", new {id = Model.Id})" method="post">
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(v => v.Name, new { @class = "form-control" } )
    </div>
    
    <div class="form-group">
        <label>Cost</label>
        @Html.TextBoxFor(v => v.Cost, new { @class = "form-control", type="number" } )
    </div>
    
    <div class="form-group">
        <label>Price</label>
        @Html.TextBoxFor(v => v.Price, new { @class = "form-control", type="number" } )
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-default">Save</button>
    </div>
</form>
