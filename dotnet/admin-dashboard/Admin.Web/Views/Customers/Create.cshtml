@model Admin.Web.ViewModels.Customers.CreateViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>New Customer</h2>

<form action="@Url.Action("Create")" method="post">
    <div class="form-group">
        <label>First Name</label>
        @Html.TextBoxFor(v => v.FirstName, new { @class = "form-control" } )
    </div>
    
    <div class="form-group">
        <label>Last Name</label>
        @Html.TextBoxFor(v => v.LastName, new { @class = "form-control" } )
    </div>
    
    <div class="form-group">
        <label>Address Line 1</label>
        @Html.TextBoxFor(v => v.AddressLine1, new { @class = "form-control" } )
    </div>
    
    <div class="form-group">
        <label>City</label>
        @Html.TextBoxFor(v => v.City, new { @class = "form-control" } )
    </div>
    
    <div class="form-group">
        <label>State</label>
        @Html.TextBoxFor(v => v.State, new { @class = "form-control" } )
    </div>
    
    <div class="form-group">
        <label>Country</label>
        @Html.TextBoxFor(v => v.Country, new { @class = "form-control" } )
    </div>
    
    <div class="form-group">
        <label>ZipCode</label>
        @Html.TextBoxFor(v => v.ZipCode, new { @class = "form-control" } )
    </div>
    
    <div class="form-group">
        <button type="submit">Save</button>
    </div>
</form>
