@model Admin.Web.ViewModels.Orders.IndexViewModel

@{
    ViewBag.Title = "Orders";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-10">
        <h2>Orders</h2>        
    </div>
    <div class="col-sm-2">
        <a class="btn btn-primary" href="@Url.Action("Create")"><span class="glyphicon glyphicon-plus"></span></a>
    </div>
</div>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Date</th>
        <th>Customer</th>
        <th>Total</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model.Orders)
    {
        <tr>
            <td>@order.OrderDate</td>
            <td>@order.Customer.LastName, @order.Customer.FirstName</td>
            <td>@order.LineItems.Sum(l => l.Quantity * l.Product.Price)</td>
        </tr>
    }
    </tbody>
</table>
